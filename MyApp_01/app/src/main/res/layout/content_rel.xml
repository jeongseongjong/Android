<?xml version="1.0" encoding="utf-8"?>

<!-- 데이터가 늘어나면 자동으로 스크롤을 만들어주는 소스 -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 화면에 일정한 view를 정하고자 할때 -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img01"
        android:src="@drawable/iamge01"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/mtxt1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/img01"
        android:text="우리나라 만세"
        />

    <!-- below : 나는 너의 다음에 위치하겠다. -->
    <TextView
        android:id="@+id/mtxt2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/mtxt1"
        android:text="우리나라 만세"
        />

    <TextView
        android:id="@+id/mtxt3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/mtxt2"
        android:text="우리나라 만세"
        />

    <TextView
        android:id="@+id/mtxt4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/mtxt3"
        android:text="우리나라 만세"
        />

    <TextView
        android:id="@+id/mtxt5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/mtxt4"
        android:text="우리나라 만세"
        />

    <TextView
        android:id="@+id/mtxt6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/mtxt5"
        android:text="우리나라 만세"
        />

    <TextView
        android:id="@+id/mtxt7"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/mtxt6"
        android:text="우리나라 만세"
        />


</RelativeLayout>
</androidx.core.widget.NestedScrollView>